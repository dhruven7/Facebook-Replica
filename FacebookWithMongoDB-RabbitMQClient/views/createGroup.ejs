<!-- Modal -->

<div id="createGroup" class="modal fade" role="dialog">

	<div class="modal-dialog">

		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Create Group</h4>
			</div>
			<div class="modal-body">
				<form name="groupCreate" novalidate>
					<div class="row">

						<label class="control-label col-sm-2" for="grp_name">Group
							Name</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="grp_name"
								placeholder="Group Name" ng-model="group_name" name="group_name"
								required> <span style="color: red"
								ng-show="groupCreate.group_name.$dirty && groupCreate.group_name.$invalid">
								<span ng-show="groupCreate.group_name.$error.required">Group
									name is required</span>
							</span>
						</div>
					</div>
					<div class="row">
						<label class="control-label col-sm-2" for="grp_desc">Group
							Description</label>
						<div class="col-sm-10">
							<textarea row="5" class="form-control" id="grp_desc"
								placeholder="Group Description" ng-model="group_desc"
								name="group_desc" required></textarea>
							<span style="color: red"
								ng-show="groupCreate.group_desc.$dirty && groupCreate.group_desc.$invalid">
								<span ng-show="groupCreate.group_desc.$error.required">Group
									description is required</span>
							</span>
						</div>
					</div>
					<div class="row">
						<br> <label class="control-label col-sm-2" for="grp_desc">Select
							Friends</label>
						<div class="col-sm-10">
							<select multiple class="form-control" id="sel2"
								name="selected_friends" ng-model="selected_friends">
								<option ng-repeat="friend in friendList"
									value="{{ {userId: friend.userId,
									           userName : friend.name} }}">{{
									friend.name }}</option>
							</select>
						</div>
					</div>
				</form>

			</div>
			<div class="modal-footer">
				<!--  ng-click="createGroup()" -->
				<form>
					<button type="submit" class="btn btn-default"
						ng-click="validate($event)">Create</button>
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</form>
			</div>
		</div>

	</div>
</div>


